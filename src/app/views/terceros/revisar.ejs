												<div class="modal-content">
													<div class="modal-header">
														<h5 class="modal-title" id="exampleModalLabel">Actualice el estudio</h5>
														<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
													</div>
						
													<div class="modal-body">
														<form action="#" method="POST">
															<div class="row">
																<div class="col-sm-12 mt-4">
																	<div class="form-group">
																		<label for="inputNombre">Nombre de la institución *</label>
																		<input type="text" class="form-control" name="nombre_inst" id="inputNombre" minlength="3" maxlength="60" placeholder="Ingrese nombre" required>
																	</div>
																</div>
																<div class="col-sm-12 mt-4">
																	<div class="form-group"> 
																		<label for="">Nivel académico *</label>
																		<select name="nivel_academico" id="" class="form-select">
																			<option selected disabled><%= PerfilAcademico[i].nivel_academico %></option>
																			<option value="Bachillerato">Bachillerato</option> 
																			<option value="Media técnica">Media técnica</option>
																			<option value="Técnico">Técnica</option> 
																			<option value="Tecnológico">Tecnología</option>
																			<option value="Profesional">Profesional</option>
																			<option value="Especialización">Especialización</option> 
																			<option value="Maestría">Maestría</option>
																			<option value="Doctorado">Doctorado</option>
																			<option value="Postdoctorado">Postdoctorado</option> 
																		</select>
																	</div>
																</div>
																<div class="col-sm-12 mt-4">
																	<div class="form-group">
																		<label for="inputNombre">Nombre titulación *</label>
																		<input type="text" class="form-control" name="titulacion" id="inputNombre" minlength="5" maxlength="60" value="<%= PerfilAcademico[i].titulacion %>" required>
																	</div>
																</div>
																<div class="col-sm-12 mt-4">
																	<div class="form-group">
																		<label for="inputTrabajo">Soporte del nivel académico y/o titulación *</label>
																		<input type="file" class="form-control" name="soporte_academico" id="inputTrabajo" value="<%= PerfilAcademico[i].soporte_academico %>" required>
																	</div>
																</div>
															</div>
															<div class="modal-footer">
																<div class="footer">
																	<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
																	<button type="submit" class="btn btn-primary">Guardar</button>
																</div>
															</div>
														</form>
													</div>
												</div>
											</div>
										</div>
									<% } %> 
								</tbody>
							</table>
						</div>
					</div>
					<div class="modal fade" id="modal1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
						<div class="modal-dialog">
							<div class="modal-content">
								<div class="modal-header">
									<h5 class="modal-title" id="exampleModalLabel">Ingresa un Estudio</h5>
									<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
								</div>
	
								<div class="modal-body">
									<form action="/crearTercero/insertarEstudio" method="POST">
										<div class="row">
											<div class="col-sm-12 mt-4">
												<div class="form-group">
													<label for="inputNombre">Nombre de la institución *</label>
													<input type="text" class="form-control" name="nombre_inst" id="inputNombre" minlength="3" maxlength="100" placeholder="Ingrese nombre" required>
												</div>
											</div>
											<div class="col-sm-12 mt-4">
												<div class="form-group"> 
													<label for="">Nivel académico *</label>
													<select name="nivel_academico" id="" class="form-select">
														<option selected disabled>Seleccionar</option>
														<option value="Bachillerato">Bachillerato</option> 
														<option value="Media técnica">Media técnica</option>
														<option value="Técnico">Técnica</option> 
														<option value="Tecnológico">Tecnología</option>
														<option value="Profesional">Profesional</option>
														<option value="Especialización">Especialización</option> 
														<option value="Maestría">Maestría</option>
														<option value="Doctorado">Doctorado</option>
														<option value="Postdoctorado">Postdoctorado</option> 
													</select>
												</div>
											</div>
											<div class="col-sm-12 mt-4">
												<div class="form-group">
													<label for="inputNombre">Nombre titulación *</label>
													<input type="text" class="form-control" name="titulacion" id="inputNombre" minlength="5" maxlength="60" placeholder="Ingrese nombre" required>
												</div>
											</div>
											<div class="col-sm-12 mt-4">
												<div class="form-group">
													<label for="inputTrabajo">Soporte del nivel académico y/o titulación *</label>
													<input type="file" class="form-control" name="soporte_academico" id="inputTrabajo" required>
												</div>
											</div>
										</div>
										<div class="modal-footer">
											<div class="footer">
												<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
												<button type="submit" class="btn btn-primary">Guardar</button>
											</div>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</article>

			<article id="tab3">
				<form action="/terceros/insertarTrabajo" id="form-PP" method="POST">
					<div class="row">
						<div class="col-sm-12 col-md-6 mt-4">
							<div class="form-group"> 
								<label for="">Tipo de entidad *</label>
								<select name="tipo_entidad" id="" class="form-select" required>
									<option disabled selected>Seleccionar</option>
									<option value="Académica">Académica</option>
