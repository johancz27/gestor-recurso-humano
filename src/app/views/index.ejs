                    <ul id="resultado">
                        <li>f</li>
                    </ul>
                    <script>
                        const formulario = document.querySelector('#search-input')
                        const boton = document.querySelector('#btnSearch')
                        const resultado = document.querySelector('#resultado')
                        console.log(formulario.value)
                        const filtrar = () => {
                            resultado.innerHTML = '';
                            const texto = formulario.value.toLowerCase();
                            for (let t in Tercero) {
                                let campo = Tercero[t].primer_nombre.toLowerCase();
                                if (campo.indexOf(texto) !== -1) {
                                    resultado.innerHTML += `<li>${Tercero[t].primer_nombre}</li>`
                                }
                            }
                            if (resultado.innerHTML === '') {
                                resultado.innerHTML += `<li>Producto no encontrado</li>`
                            }
                        }
                        boton.addEventListener('click', filtrar)
                        filtrar()
                    </script>
                </form>
                <div class="row">
                    <div class="col-sm-12 mt-4">
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered align-middle">
                                <thead>
                                    <tr>
                                        <th scope="col">Nombre</th>
                                        <th scope="col">Teléfono móvil</th>
                                        <th scope="col">Correo</th>
                                        <th scope="col">Hoja de vida</th>
                                        <th scope="col">Ver perfil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                <% for (let i=0; i < Tercero.length; i++) { %>
                                    <tr>
                                        <td>
                                            <%= Tercero[i].primer_nombre +' '+ Tercero[i].primer_apellido %></td>
                                            <td><%= Tercero[i].telefono_movil %></td>
                                            <td><%= Tercero[i].correo_tercero %></td>
                                            <td><%= Tercero[i].hoja_vida %></td>
                                        <td class="td-ver"><button type="button" class="btn-ver"><a href="/revisarTercero/mostrar/<%= Tercero[i].idTercero %>"><i class="fas fa-eye"></i></a></button></td>
                                    </tr>
                                <% } %> 
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
